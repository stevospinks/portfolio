{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Stephen's portfolio",
  "main": "index.js",
  "scripts": {
    "prestart": "start \"\" \"C:\\Program Files\\Firefox Developer Edition\\firefox.exe\" \"http://localhost:3000\"",
    "start": "webpack serve --config webpack.config.dev.js --port 3000",
    "prebuild": "rimraf ./build && mkdir build",
    "build": "webpack --config webpack.config.prod.js && start \"\" \"C:\\Program Files\\Firefox Developer Edition\\firefox.exe\" \"http://localhost:3001\" && http-server ./build -p 3001"
  },
  "repository": {
    "type": "git",
    "url": ".git"
  },
  "author": "Stephen Spinks",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-preset-react-app": "^10.0.0",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.0.2",
    "cssnano": "^4.1.10",
    "eslint": "^7.19.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.22.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.0.0",
    "http-server": "^0.12.3",
    "mini-css-extract-plugin": "^1.3.6",
    "node-sass": "^5.0.0",
    "postcss": "^8.2.5",
