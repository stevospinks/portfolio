  "devDependencies": {
    "@babel/core": "^7.5.5",
    "babel-eslint": "^8.0.6",
    "babel-loader": "^8.0.6",
    "babel-preset-react-app": "^9.0.1",
    "css-loader": "^3.2.0",
    "cssnano": "^4.1.10",
    "eslint": "^5.15.2",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-react": "^7.14.3",
    "file-loader": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
